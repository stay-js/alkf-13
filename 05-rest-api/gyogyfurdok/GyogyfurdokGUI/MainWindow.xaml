<Window x:Class="GyogyfurdokGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GyogyfurdokGUI"
        mc:Ignorable="d"
        Title="Gyógyfürdők - Gyógyfürdő hozzáadása" Width="500" SizeToContent="Height">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Center"
            Padding="0"
            Margin="5"
            Content="Azonosító:" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Padding="2"
            Margin="5"
            Text="{Binding Id}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            Padding="0"
            Margin="5"
            Content="Név:" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Padding="2"
            Margin="5"
            Text="{Binding Name}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            Padding="0"
            Margin="5"
            Content="Település:" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Padding="2"
            Margin="5"
            Text="{Binding City}" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            VerticalAlignment="Center"
            Padding="0"
            Margin="5"
            Content="Irányítószám:" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Padding="2"
            Margin="5"
            Text="{Binding ZipCode}" />

        <Label
            Grid.Row="4"
            Grid.Column="0"
            VerticalAlignment="Center"
            Padding="0"
            Margin="5"
            Content="Megye:" />
        <ComboBox
            Grid.Row="4"
            Grid.Column="1"
            ItemsSource="{Binding Counties}"
            SelectedItem="{Binding SelectedCounty}"
            Margin="5" />

        <Button
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="5"
            Height="25"
            Margin="5"
            Content="Létrehozás"
            Command="{Binding SubmitCommand}" />
    </Grid>
</Window>
