<Window x:Class="GyogyfurdokGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GyogyfurdokGUI"
        mc:Ignorable="d"
        Title="Gyógyfürdők - Gyógyfürdő hozzáadása" Width="500" SizeToContent="Height">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <StackPanel Margin="10">
        <Label
            Content="Kérem, válasszon megyét!"
            Padding="0"
            Margin="0,0,0,5" />
        <ComboBox
            ItemsSource="{Binding Counties}"
            SelectedItem="{Binding SelectedCounty}"
            Margin="0,0,0,10" />
    </StackPanel>
</Window>
