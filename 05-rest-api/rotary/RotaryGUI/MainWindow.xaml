<Window x:Class="RotaryGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RotaryGUI"
        mc:Ignorable="d"
        Title="Rotary" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    
    <StackPanel Margin="10">
        <Label
            Content="Kérem, válasszon kategóriát!"
            Padding="0"
            Margin="0,0,0,10"/>
        <ComboBox
            ItemsSource="{Binding Categories}"
            SelectedItem="{Binding SelectedCategory}"
            Margin="0,0,0,10"/>

        <Label
            Content="Kérem, válasszon Országkódot!"
            Padding="0"
            Margin="0,0,0,10"/>
        <ComboBox
            ItemsSource="{Binding CountryCodes}"
            SelectedItem="{Binding SelectedCountryCode}"
            Margin="0,0,0,10"/>
    </StackPanel>
</Window>
