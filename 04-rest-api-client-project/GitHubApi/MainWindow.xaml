<Window x:Class="GitHubApi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitHubApi"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="GitHub User Search" SizeToContent="Height" MinHeight="500" Width="400">
    <StackPanel Margin="10">
        <Label
            Content="Please, input a username"
            Padding="0"
            Margin="0,0,0,5"/>

        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <TextBox
                Text="{Binding UserName}"
                Margin="0,0,5,0" />
            <Button
                Content="Search"
                Grid.Column="1"
                Margin="5,0,0,0"
                Click="SearchButton_Click"/>
        </Grid>

        <StackPanel Orientation="Horizontal" Visibility="{Binding UserDataVisibility}" Margin="0,0,0,20">
            <Image
                Source="{Binding User.AvatarUrl}"
                Width="60"
                Height="60"
                Margin="0,0,10,0">
                <Image.Clip>
                    <EllipseGeometry Center="30, 30" RadiusX="30" RadiusY="30"/>
                </Image.Clip>
            </Image>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{Binding User.FormattedName}" FontSize="20" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding User.FormattedBio}" FontSize="16"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Visibility="{Binding RepositoriesVisibility}" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label
                    Content="Top Language:"
                    Padding="0"
                    Margin="0,0,5,0"
                    FontSize="14"
                    FontWeight="SemiBold"/>
                <TextBlock Text="{Binding TopLanguage}" FontSize="14" Margin="5,0,0,0"/>
            </StackPanel>

            <Label
                Content="Respositories:"
                Padding="0"
                Margin="0,0,0,5"
                FontSize="14"
                FontWeight="SemiBold"/>

            <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                <DataGrid ItemsSource="{Binding Repositories}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="80"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                        <DataGridTemplateColumn Header="Link" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Hyperlink NavigateUri="{Binding HTMLUrl}" RequestNavigate="Hyperlink_RequestNavigate">
                                            <TextBlock Text="View" />
                                        </Hyperlink>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label
                Content="Zen Message:"
                Padding="0"
                Margin="0,0,5,0"
                FontWeight="SemiBold"/>
            <TextBlock Text="{Binding ZenMessage}" Margin="5,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
