<Window x:Class="WA2024GUI_NZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WA2024GUI_NZ"
        mc:Ignorable="d"
        Title="Versenyzők adatai" SizeToContent="Height" Width="500">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <StackPanel Margin="10">
        <Label
            Content="Kérem, válasszon szakmát!"
            Padding="0"
            Margin="0,0,0,10"/>
        <ComboBox
            ItemsSource="{Binding Skills}"
            SelectedItem="{Binding SelectedSkill}"
            Margin="0,0,0,10"/>

        <Label
            Content="Kérem, válasszon versenyzőt!"
            IsEnabled="{Binding IsSkillSelected}"
            Padding="0"
            Margin="0,0,0,10"/>
        <ComboBox
            ItemsSource="{Binding AvailableCompetitors}"
            IsEnabled="{Binding IsSkillSelected}"
            SelectedItem="{Binding SelectedCompetitor}"
            Margin="0,0,0,10"/>

        <GroupBox Header="A versenyző adatai">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label
                    Content="Ország:"
                    Padding="0"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Grid.Row="0"
                    Grid.Column="0"/>

                <TextBox
                    Text="{Binding SelectedCompetitor.Nation.Region}"
                    Margin="5"
                    IsReadOnly="True"
                    Grid.Row="0"
                    Grid.Column="1"/>

                <Label
                    Content="Pont:"
                    Padding="0"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Grid.Row="1"
                    Grid.Column="0"/>

                <TextBox
                    Text="{Binding SelectedCompetitor.Score}"
                    Margin="5"
                    IsReadOnly="True"
                    Grid.Row="1"
                    Grid.Column="1"/>

                <Label
                    Content="Érem:"
                    Padding="0"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Grid.Row="2"
                    Grid.Column="0"/>

                <TextBox
                    Text="{Binding SelectedCompetitor.Medal, Mode=OneWay}"
                    Margin="5"
                    IsReadOnly="True"
                    Grid.Row="2"
                    Grid.Column="1"/>
            </Grid>
        </GroupBox>
    </StackPanel>
</Window>
