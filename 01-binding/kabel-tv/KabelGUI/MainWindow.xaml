<Window x:Class="KabelGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KabelGUI"
        mc:Ignorable="d"
        Title="Kábeltévé előfizetések" SizeToContent="Height" MinHeight="600" Width="400">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <StackPanel Margin="10">
        <Label
            Content="Válasszon régiót!"
            Padding="0"
            Margin="0,0,0,10"/>
        <ComboBox
            ItemsSource="{Binding Regions}"
            SelectedItem="{Binding SelectedRegion}"
            Margin="0,0,0,10"/>

        <Label
            Content="Válasszon területet!"
            IsEnabled="{Binding IsRegionSelected}"
            Padding="0"
            Margin="0,0,0,10"/>
        <ComboBox
            ItemsSource="{Binding AvailableAreas}"
            IsEnabled="{Binding IsRegionSelected}"
            SelectedItem="{Binding SelectedArea}"
            Margin="0,0,0,10"/>

        <DataGrid
            ItemsSource="{Binding SubscriptionsByYear}"
            Visibility="{Binding TableVisibility}"
            HorizontalAlignment="Center"
            AutoGenerateColumns="False"
            ColumnWidth="*"
            IsReadOnly="True"
            Margin="50,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Év" Binding="{Binding Year}" />
                <DataGridTextColumn Header="Előfizetések" Binding="{Binding Subscriptions}" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
