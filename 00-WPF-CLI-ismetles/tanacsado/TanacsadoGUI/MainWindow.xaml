<Window x:Class="TanacsadoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TanacsadoGUI"
        mc:Ignorable="d"
        Title="Tanácsadók adatai" SizeToContent="Height" Width="400">
    <StackPanel Margin="10">
        <Label Content="Kérem, válasszon szakterületet!" Padding="0"/>
        <ComboBox
            Name="SpecializationComboBox"
            SelectionChanged="SpecializationComboBox_SelectionChanged"
            Padding="5"/>

        <Label
            Margin="0,10,0,0"
            Name="AdvisorLabel"
            Content="Kérem, válasszon tanácsadót!"
            IsEnabled="False"
            Padding="0"/>
        <ComboBox
            Name="AdvisorComboBox"
            SelectionChanged="AdvisorComboBox_SelectionChanged"
            IsEnabled="False"
            Padding="5"/>

        <GroupBox Header="Tanácsadó adatai" Margin="0,10,0,0">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label
                    Content="Telefon:"
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Padding="0"
                    Margin="5"/>
                <TextBox
                    Name="PhoneTextBox"
                    Grid.Row="0"
                    Grid.Column="1"
                    IsReadOnly="True"
                    Padding="3"
                    Margin="5"/>

                <Label
                    Content="E-mail:"
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Padding="0"
                    Margin="5"/>
                <TextBox
                    Name="EmailTextBox"
                    Grid.Row="1"
                    Grid.Column="1"
                    IsReadOnly="True"
                    Padding="3"
                    Margin="5"/>

                <Label
                    Content="Óradíj:"
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Padding="0"
                    Margin="5"/>
                <TextBox
                    Name="HourlyRateTextBox"
                    Grid.Row="2"
                    Grid.Column="1"
                    IsReadOnly="True"
                    Padding="3"
                    Margin="5"/>
            </Grid>
        </GroupBox>
    </StackPanel>
</Window>
